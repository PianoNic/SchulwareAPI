# SchulwareAPI Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Schulnetz API Configuration
SCHULNETZ_API_BASE_URL=https://your-url.com
SCHULNETZ_WEB_BASE_URL=https://schulnetz.web.app
SCHULNETZ_CLIENT_ID=your_client_id_here

# Debug & Error Reporting Configuration
DEBUG_VIDEO_RECORDING=false
DISCORD_WEBHOOK_URL=

# Sentry/GlitchTip Error Tracking Configuration
SENTRY_DSN=https://your_dsn@glitchtip.example.com/project_id
ENVIRONMENT=development
RELEASE=0.2.7

# Sentry Performance & Sampling Configuration
# Sample rate for errors (1.0 = 100%, 0.1 = 10%)
SENTRY_SAMPLE_RATE=0.1
# Sample rate for performance monitoring (lower values recommended for production)
SENTRY_TRACES_SAMPLE_RATE=0.1
