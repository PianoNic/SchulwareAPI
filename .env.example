# SchulwareAPI Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Schulnetz API Configuration
SCHULNETZ_API_BASE_URL=https://your-url.com
SCHULNETZ_WEB_BASE_URL=https://schulnetz.web.app
SCHULNETZ_CLIENT_ID=your_client_id_here

# Sentry/GlitchTip Error Tracking Configuration (Optional)
# SENTRY_DSN=https://your_dsn@glitchtip.example.com/project_id

# Push Notification Configuration
# iOS APNs (Apple Push Notification service)
# Get these from Apple Developer Console
APNS_KEY_ID=your_key_id_here
APNS_TEAM_ID=your_team_id_here
APNS_KEY_PATH=/path/to/AuthKey_XXXXXXXXXX.p8
APNS_TOPIC=com.yourcompany.schulware
APNS_USE_SANDBOX=true

# Android FCM (Firebase Cloud Messaging)
# Get this from Google Cloud Console (not Firebase Console!)
# No Firebase project needed, just enable FCM API
FCM_SERVER_KEY=your_fcm_server_key_here

# Self-hosted ntfy for Android without Google Services
NTFY_SERVER_URL=http://localhost:8080
# NTFY_AUTH_TOKEN=optional_bearer_token_for_auth
